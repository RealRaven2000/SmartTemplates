<?xml version = "1.0" encoding = "UTF-8"?>

<!DOCTYPE prefwindow SYSTEM "chrome://smarttemplate4/locale/smartTemplate-settings.dtd">

<?xml-stylesheet href = "chrome://global/skin/" type = "text/css"?>
<?xml-stylesheet href = "chrome://smarttemplate4/skin/style.css" type = "text/css" title = "SmartTemplateSettings" ?>

<prefwindow id = "smartTemplate_prefDialog"
            xmlns = "http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
            title = "&pref_dialog.title; (&localename.label;)"
            buttons = "extra2,cancel,accept"
            buttonlabelextra2 = "&contribute_button;"
            ondialogextra2 = "SmartTemplate4.Util.showDonatePage();"
            onload = "st4Load=SmartTemplate4.Settings.onLoad.bind(SmartTemplate4.Settings);st4Load();"
            onunload = "SmartTemplate4.Settings.onUnload();"
            >

	<prefpane id = "smartTemplatePane" orient = "vertical">

	<!-- ######## Creating Menubar ######## -->
	<!-- MENUITEMS: File - Help -->
	<toolbox>
		<toolbar type = "menubar" hidden = "true">
			<toolbaritem>
				<menubar  id = "SmartTemplate4MenuBar" style = "border:0px;">
				<!-- ###### FILE ###### -->
					<menu id = "SmartTemplate4FileMenuitem"
					      label = "&file.label;"
					      class = "menu-iconic">
						<menupopup>
							<!-- ###### FILE -> EXPORT * ###### -->
							<menuitem id = "SmartTemplate4ExportItem"
							          label = "&menu.template_export.label;&#133;"
							          class = "menuitem-iconic"
							          oncommand = "SmartTemplate4.IO.export();" />
							<!-- ###### FILE -> IMPORT ###### -->
							<menuitem id = "SmartTemplate4ImportItem"
							          label = "&menu.template_import.label;&#133;"
							          class = "menuitem-iconic"
							          oncommand = "SmartTemplate4.IO.import();" />
							<!-- ###### FILE -> CLOSE ###### -->
							<menuitem id = "SmartTemplate4CloseItem"
							          label = "&close.label;"
							          class = "menuitem-iconic"
							          oncommand = "window.close();" />
						</menupopup>
					</menu>

					<!-- ###### TOOLS ######
					<menu id = "SmartTemplate4ToolsMenuitem"
					      label = "&tools.label;"
					      class = "menu-iconic">
						<menupopup id = "SmartTemplate4-tools-popup">
						</menupopup>
					</menu> -->
					<!-- ###### HELP ###### -->
					<menu id = "SmartTemplate4HelpMenuitem"
					      label = "Advanced"
					      class = "menu-iconic">
								<!-- ###### HELP -> * ###### -->
						<menupopup id = "SmartTemplate4-help-popup">
							<menuitem id = "menuHomePage"
							          label = "&url.homePage.label;"
							          class = "menuitem-iconic"
							          onclick = "SmartTemplate4.Util.showHomePage();" />
							<menuitem id = "menuSupportPage"
							          label = "&url.supportPage.label;"
							          class = "menuitem-iconic"
							          onclick = "SmartTemplate4.Util.showSupportPage();" />
							<menuitem id = "menuBugsAndFeaturesPage"
							          label = "&url.bugsAndFeaturesPage.label;"
							          class = "menuitem-iconic"
							          onclick = "SmartTemplate4.Util.showBugsAndFeaturesPage();" />
						</menupopup>
					</menu>
				</menubar>
			</toolbaritem>
		</toolbar>
	</toolbox>

		<spacer id="topOptions" />
<!-- fills full width of window -->
<hbox id="optionsContainer" flex="1">

	<vbox id="decksContainer" flex="2">

		<!-- ######## Creating Identity Dropdown Box ######## -->
		<hbox align="center">
			<label value = "&pref_server_desc;:"/>
