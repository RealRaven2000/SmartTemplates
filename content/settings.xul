				<menupopup id = "msgIdentityPopup">
					<menuitem class = "identity-popup-item" label = "&pref_server_def;" value = "common"/>
				</menupopup>
			</menulist>
			<toolbar id="templateTools" 
			         mode="icons" 
							 customizable="false">
				<toolbarbutton id="btnSaveTemplate"
