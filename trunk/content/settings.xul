						<preference id = "rsp_Enable"        name = "extensions.smartTemplate4.common.rsp"       type = "bool"/>
						<preference id = "fwd_Enable"        name = "extensions.smartTemplate4.common.fwd"       type = "bool"/>
						<preference id = "new_smartTemplate" name = "extensions.smartTemplate4.common.newmsg"    type = "unichar"/>
						<preference id = "rsp_smartTemplate" name = "extensions.smartTemplate4.common.rspmsg"    type = "unichar"/>
						<preference id = "fwd_smartTemplate" name = "extensions.smartTemplate4.common.fwdmsg"    type = "unichar"/>
						<preference id = "new_isHtml"        name = "extensions.smartTemplate4.common.newhtml"   type = "bool"/>
						<preference id = "rsp_isHtml"        name = "extensions.smartTemplate4.common.rsphtml"   type = "bool"/>
						<preference id = "fwd_isHtml"        name = "extensions.smartTemplate4.common.fwdhtml"   type = "bool"/>
